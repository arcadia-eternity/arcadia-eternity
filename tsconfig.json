{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "paths": {
      "@data/": ["./data"]
    },
    "outDir": "./dist/",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "types": ["node"]
  },
  "include": ["./bin/**/*", "./devServer/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
