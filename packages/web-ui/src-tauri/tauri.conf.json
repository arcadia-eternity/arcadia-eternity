{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "arcadia-eternity-client",
  "version": "0.1.0",
  "identifier": "com.yuuinih.arcadia-eternity",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev:tauri",
    "beforeBuildCommand": "pnpm build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "arcadia-eternity",
        "width": 1600,
        "height": 1000,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPCONFIG/*", "$APPDATA/*"]
      },
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi", "nsis"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": "-",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    }
  }
}
